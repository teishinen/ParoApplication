<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/textViewPatientNameInCellHistoryRecordDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorLightBlue"
        android:textSize="@dimen/textSizeRegular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck"
        tools:text="中村　蓮" />

    <TextView
        android:id="@+id/textViewPatientAgeInCellHistoryRecordDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPatientNameInCellHistoryRecordDetail"
        app:layout_constraintStart_toEndOf="@+id/textViewPatientNameInCellHistoryRecordDetail"
        app:layout_constraintTop_toTopOf="@+id/textViewPatientNameInCellHistoryRecordDetail"
        tools:text="65才" />

    <TextView
        android:id="@+id/textViewSexInCellHistoryRecordDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/textViewPatientAgeInCellHistoryRecordDetail"
        app:layout_constraintTop_toTopOf="@+id/textViewPatientAgeInCellHistoryRecordDetail"
        tools:text="男" />

</androidx.constraintlayout.widget.ConstraintLayout>