<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f9fc"
        android:layout_above="@id/ll_bottom"
        android:layout_alignParentTop="true"
        ></FrameLayout>
   <LinearLayout
       android:id="@+id/ll_bottom"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:background="#edf2f8"
       android:layout_height="70dp">
       <LinearLayout
           android:id="@+id/ll_home"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="match_parent">
          <ImageView
              android:id="@+id/iv_home"
              android:layout_width="30dp"
               android:src="@drawable/ic_baseline_home_24_select"
              android:layout_height="30dp"></ImageView>
           <TextView
               android:layout_width="wrap_content"
              android:text="@string/home"
               android:layout_marginTop="5dp"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/ll_register"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:orientation="vertical"

           android:gravity="center"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/iv_user"
               android:layout_width="30dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_baseline_supervised_user_circle_24_unselect"></ImageView>
           <TextView

               android:layout_width="wrap_content"
               android:text="@string/ledger"
               android:layout_marginTop="5dp"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/ll_record"
           android:layout_width="0dp"
           android:layout_weight="1"

           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/iv_record"
               android:layout_width="30dp"
               android:src="@drawable/ic_baseline_format_list_bulleted_24_unselect"
               android:layout_height="30dp"></ImageView>
           <TextView
               android:layout_width="wrap_content"
               android:text="@string/record"
               android:layout_marginTop="5dp"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/ll_account"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/iv_persion"
               android:layout_width="30dp"
               android:src="@drawable/ic_baseline_person_24_unselect"
               android:layout_height="30dp"></ImageView>
           <TextView
               android:layout_width="wrap_content"
               android:text="@string/account"
               android:layout_marginTop="5dp"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>
   </LinearLayout>


</RelativeLayout>