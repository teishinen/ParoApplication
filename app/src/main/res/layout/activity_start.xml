<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edf2f8"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_paro_tittle"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarInDataFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_evaluate_before"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        >
        <TextView
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:gravity="center"
            android:text="計時を開始するには、開始ボタンを押してください
　                      計時を終了するには、終了ボタンを押してください"
            ></TextView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="300dp"
            android:text="00:00:00"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#6491ba"
            android:background="@drawable/bg_time"
            android:layout_height="300dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"

            android:gravity="center"
            android:layout_marginTop="-15dp"
            android:orientation="horizontal"

            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/bg_start"
                    android:gravity="center"
                    android:text="開始"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="80dp"
                    android:text=" 終了 "
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_stop"
                    android:layout_height="80dp"></TextView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>